<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutProduit"
        android:layout_width="372dp"
        android:layout_height="156dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView2"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:text="Chips Lays Classic"
            android:textSize="20dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:progress="20"
            android:progressTint="@android:color/holo_red_dark" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/imageButton3"
            android:layout_alignEnd="@+id/textView2"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textView3"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/imageButton2"
            android:text="Favoris"
            tools:text="Favoris" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageButton2"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/textView4"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_centerVertical="true"
            android:text="Alternatives" />

        <ImageButton
            android:id="@+id/notationButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imageButton3"
            android:layout_toEndOf="@+id/textView3"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <TextView
            android:id="@+id/textView5"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notationButton"
            android:layout_alignEnd="@+id/textView3"
            android:text="Notation"
            tools:text="Notation" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutAllergenes"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/layoutProduit"
        android:layout_alignStart="@+id/layoutProduit"
        android:layout_below="@+id/layoutProduit"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="177dp">

        <TextView
            android:id="@+id/textView6"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:text="Allergenes"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView7"
            style="@style/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Presence de gluten" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/textView7"
            android:background="@color/warningColor"
            android:backgroundTint="@color/warningColor"
            android:backgroundTintMode="src_over"
            app:srcCompat="@android:drawable/stat_sys_warning" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutQualite"
        android:layout_width="371dp"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/layoutAllergenes"
        android:layout_marginBottom="68dp">

        <TextView
            android:id="@+id/textView12"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="/100 g"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:text="Qualites"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDefauts"
        android:layout_width="371dp"
        android:layout_height="96dp"
        android:layout_above="@+id/layoutQualite"
        android:layout_alignStart="@+id/layoutQualite">

        <TextView
            android:id="@+id/textView8"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:text="Defauts"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8" />

    </RelativeLayout>
</RelativeLayout>