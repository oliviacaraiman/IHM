<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutProduit"
        android:layout_width="372dp"
        android:layout_height="156dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView2"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:text="Chips Lays Classic"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/imageButton3"
            android:layout_alignEnd="@+id/textView2"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textView3"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/imageButton2"
            android:text="Favoris"
            tools:text="Favoris" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageButton2"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/textView4"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_centerVertical="true"
            android:text="Alternatives" />

        <ImageButton
            android:id="@+id/notationButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imageButton3"
            android:layout_toEndOf="@+id/textView3"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <TextView
            android:id="@+id/textView5"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notationButton"
            android:layout_alignEnd="@+id/textView3"
            android:text="Notation"
            tools:text="Notation" />

        <SeekBar
            android:id="@+id/seekBar3"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:backgroundTint="@color/warningColor"
            android:max="5"
            android:progress="1"
            android:progressBackgroundTint="@color/warningColor"
            android:progressTint="@color/warningColor"
            android:tickMarkTint="@color/warningColor" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutAllergenes"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/layoutProduit"
        android:layout_alignStart="@+id/layoutProduit"
        android:layout_below="@+id/layoutProduit"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="177dp">

        <TextView
            android:id="@+id/textView6"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:text="Allergènes"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView7"
            style="@style/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Présence de gluten" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/textView7"
            android:background="@color/warningColor"
            android:backgroundTint="@color/warningColor"
            android:backgroundTintMode="src_over"
            app:srcCompat="@android:drawable/stat_sys_warning" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutQualite"
        android:layout_width="371dp"
        android:layout_height="110dp"
        android:layout_alignStart="@+id/layoutDefauts"
        android:layout_below="@+id/layoutDefauts"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView12"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="/100 g"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView13"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:text="Qualités"
            android:textSize="20dp" />

        <TextView
            style="@style/text"
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_centerVertical="true"
            android:text="Label bio" />

        <TextView
            style="@style/text"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView13"
            android:text="Produit végétarien" />

        <TextView
            style="@style/text"
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:text="Peu sucré" />

        <TextView
            style="@style/text"
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView14"
            android:text="TextView"
            tools:text="1,2 g" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDefauts"
        android:layout_width="371dp"
        android:layout_height="85dp"
        android:layout_alignEnd="@+id/layoutAllergenes"
        android:layout_below="@+id/layoutAllergenes"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView8"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:text="Défauts"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView3"
            android:layout_alignStart="@+id/textView8"
            android:isScrollContainer="true" />

        <TextView
            android:id="@+id/textView17"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="/100 g"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginStart="11dp"
            app:srcCompat="@drawable/ic_dashboard_black_24dp" />

        <TextView
            android:id="@+id/textView20"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:text="Trop salé" />

        <TextView
            android:id="@+id/textView21"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/spinner"
            android:text="1,3 g" />

    </RelativeLayout>

</RelativeLayout>