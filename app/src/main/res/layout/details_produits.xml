<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/include2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp">

        <RelativeLayout
            android:id="@+id/layoutProduit"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/textView19"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/lays_light" />

            <TextView
                android:id="@+id/textView2"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:text="Chips Lays Classic"
                android:textSize="28dp" />

            <ToggleButton
                android:id="@+id/button_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:background="@drawable/favorite_button"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/textView3"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/button_favorite"
                android:text="Favoris"
                tools:text="Favoris" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/button_favorite"
                android:layout_alignEnd="@+id/textView2"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                app:srcCompat="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/textView4"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignEnd="@+id/textView5"
                android:layout_alignBottom="@+id/imageButton3"
                android:text="Alternatives" />

            <ImageButton
                android:id="@+id/notationButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/imageButton3"
                android:layout_alignBottom="@+id/imageView"
                android:background="@drawable/notation"
                android:padding="2dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/textView5"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3"
                android:layout_alignBottom="@+id/notationButton"
                android:text="Notation"
                tools:text="Notation" />

            <!--            <SeekBar
                android:id="@+id/seekBar3"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_above="@+id/textView18"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/warningColor"
                android:max="5"
                android:progress="1"
                android:progressBackgroundTint="@color/warningColor"
                android:progressTint="@color/warningColor"
                android:tickMarkTint="@color/warningColor" />-->

            <TextView
                android:id="@+id/textView18"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView19"
                android:layout_alignBottom="@+id/textView19"
                android:layout_toStartOf="@+id/textView2"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="1/5 Mauvais" />

            <TextView
                android:id="@+id/textView19"
                style="@style/text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:background="@color/warningColor"
                android:paddingBottom="10dp"
                android:text=" " />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView19"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginBottom="10dp"
                android:maxWidth="100dp"
                android:progress="20"
                android:progressBackgroundTint="@android:color/holo_red_dark"
                android:progressTint="@android:color/holo_red_dark" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutAllergenes"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/layoutProduit"
            android:layout_alignStart="@+id/layoutProduit"
            android:layout_alignEnd="@+id/layoutProduit"
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="177dp">

            <TextView
                android:id="@+id/textView6"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:text="Allergènes"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                style="@style/warningText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="Présence de gluten" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_alignStart="@+id/textView6"
                android:layout_alignTop="@+id/textView7"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/ic_warning" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutQualite"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/layoutDefauts"
            android:layout_alignParentStart="true"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView12"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView13"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:text="/100 g"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView9"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:paddingTop="5dp"
                android:text="Qualités"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/ic_bio" />

            <TextView
                android:id="@+id/textView13"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="42dp"
                android:text="Label bio" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_alignStart="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/ic_vegetables" />

            <TextView
                android:id="@+id/textView14"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="42dp"
                android:text="Produit végétarien" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_alignStart="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/ic_candy" />

            <TextView
                android:id="@+id/textView15"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_marginLeft="42dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:text="Peu sucré" />

            <TextView
                android:id="@+id/textView16"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView15"
                android:layout_alignEnd="@+id/textView12"
                android:layout_alignBottom="@+id/textView15"
                android:layout_marginEnd="5dp"
                android:text="1,2 g"
                tools:text="1,2 g" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutDefauts"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/layoutAllergenes"
            android:layout_alignParentStart="true"
            android:background="@drawable/border"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textView8"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:paddingTop="5dp"
                android:text="Défauts"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView3"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:isScrollContainer="true" />

            <TextView
                android:id="@+id/textView17"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:text="/100 g"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_salt_22dp" />

            <TextView
                android:id="@+id/textView20"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="Trop salé" />

            <TextView
                android:id="@+id/textView21"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:text="1,3 g" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>